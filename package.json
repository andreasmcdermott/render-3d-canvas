{
  "name": "render-3d-canvas",
  "version": "1.0.0",
  "description": "Software 3D renderer in JS",
  "main": "public/index.html",
  "keywords": [
    "javascript",
    "canvas",
    "3d"
  ],
  "scripts": {
    "start": "esbuild src/index.mjs --bundle --outdir=public --out-extension:.js=.mjs --format=esm --platform=neutral --watch --servedir=public --define:IS_DEV=true",
    "build": "esbuild src/index.mjs --bundle --outdir=public --out-extension:.js=.mjs --format=esm --platform=neutral --define:IS_DEV=false"
  },
  "devDependencies": {
    "esbuild": "^0.18.3"
  }
}
